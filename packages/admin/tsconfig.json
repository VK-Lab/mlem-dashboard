{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@mlem-admin/": [
        "src/"
      ],
      "@mlem-admin/*": [
        "src/*"
      ],
      "@mlem-admin/assets": [
        "src/assets/"
      ],
      "@mlem-admin/assets/*": [
        "src/assets/*"
      ],
      "~/public": [
        "./public"
      ],
      "~/public/*": [
        "./public/*"
      ],
      "react": [
        "./node_modules/@types/react"
      ],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2021",
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ],
  "include": [
    "src/**/*",
    "docs/**/*",
    "examples/**/*",
    "packages/**/*",
    "packages/**/*.ts",
    "vitest.config.ts",
    "next-env.d.ts"
  ],
  "extends": "../../tsconfig.json"
}
