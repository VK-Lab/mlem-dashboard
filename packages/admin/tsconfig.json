{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@mlem/admin": [
        "./src"
      ],
      "@mlem/admin/*": [
        "./src/*"
      ],
      "@mlem/assets": [
        "./src/assets"
      ],
      "@mlem/assets/*": [
        "./src/assets/*"
      ],
      "~/public": [
        "./public"
      ],
      "~/public/*": [
        "./public/*"
      ],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2021",
    "typeRoots": [
      "packages/core/src/types/*.d.ts"
    ],
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ],
  "include": [
    "docs/**/*",
    "examples/**/*",
    "packages/**/*",
    "packages/**/*.ts",
    "vitest.config.ts"
  ]
}
