{
  "compilerOptions": {
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "lib": [
      "ES5",
      "ES2015",
      "ES2016",
      "dom",
      "dom.iterable",
      "ES2015.Promise"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@mlem-user": ["./src"],
      "@mlem-user/*": ["./src/*"],
      "react": [
        "./node_modules/@types/react"
      ]
    },
    "target": "es5",
    "baseUrl": ".",
    "pretty": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ],
  "include": [
    "next-env.d.ts",
    "./src/**/*",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
}
