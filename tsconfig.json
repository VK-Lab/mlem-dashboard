{
  "compilerOptions": {
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "lib": [
      "ES5",
      "ES2015",
      "ES2016",
      "dom",
      "dom.iterable",
      "ES2015.Promise"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["**/node_modules/**", "**/dist/**"],
  "include": [
    "docs/**/*",
    "examples/**/*",
    "packages/**/*",
    "packages/**/*.ts",
    "vitest.config.ts"
  ]
}
